{
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ],
  "rootDir": "./../../",
  "testEnvironment": "node",
  "testRegex": "spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest",
    "^.+\\.(ts|tsx|js|jsx)$": "babel-jest"
  },
  "moduleDirectories": [
    "<rootDir>/",
    "node_modules"
  ],
  "collectCoverageFrom": [
    "src/**/*.{ts,js}",
    "!src/main.ts",
    "!src/**/*.module.ts",
    "!src/**/db/**/*.ts",
    "!src/**/config/**/*.ts"
  ],
  "coverageDirectory": "./coverage",
  "coverageThreshold": {
    "global": {
      "lines": 77
    }
  },
  "coverageReporters": [
    "text",
    "lcov",
    "text-summary"
  ]
}