{
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ],
  "rootDir": "./../../",
  "testEnvironment": "node",
  "testRegex": "spec.ts$",
  "maxWorkers": 1,
  "forceExit": true,
  "testTimeout": 60000,
  "globals": {
    "NODE_ENV": "test"
  },
  "setupFiles": ["<rootDir>/test/config/jest-setup.ts"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest",
    "^.+\\.(ts|tsx|js|jsx)$": "babel-jest"
  },
  "moduleDirectories": [
    "<rootDir>/",
    "node_modules"
  ],
  "collectCoverageFrom": [
    "src/**/*.{ts,js}",
    "!src/main.ts",
    "!src/**/*.module.ts",
    "!src/**/db/**/*.ts",
    "!src/**/config/**/*.ts",
    "!src/modules/simulado/**/*.ts",
    "!src/modules/simulado/**/*.js",
    "!src/modules/vcnafacul-form/**/*.ts",
    "!src/modules/audit-log/**/*.ts",
    "!src/utils/decorator/**/*.ts",
    "!src/**/*.dto.output.ts"
  ],
  "coverageDirectory": "./coverage",
  "coverageThreshold": {
    "global": {
      "lines": 70
    }
  },
  "coverageReporters": [
    "text",
    "lcov",
    "text-summary"
  ]
}